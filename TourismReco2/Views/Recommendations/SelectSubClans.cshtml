@model List<TourismReco2.Models.Clan>

@{
    ViewBag.Title = "title";
}

<div id="sub-clan-priority">
    <section id="fh5co-hero" class="js-fullheight" @*style="background-image: url(/Content/images/hero3.jpg);"*@ data-next="yes">

        <div class="container">
            <h2>Select Sub Clan preference levels</h2>
            @using (Html.BeginForm("SaveSubClanPriority", "Recommendations", FormMethod.Post, new { @class = "reco_form" }))
            {
                <div class="reco_form_overlay">

                    @for (int i = 0; i < Model.Count;)
                    {
                        <div class="row">
                            <div class="col-md-5 col-md-push-1">
                                <h3>@Model[i].ClanName</h3>

                                @for (int j = 0; j < Model[i].SubClans.Count; j++)
                                {
                                    @Html.HiddenFor(m => m[i].ClanId)
                                    @Html.HiddenFor(m => m[i].ClanName)
                                    @Html.HiddenFor(m => m[i].SubClans[j].SubClanId)
                                    @Model[i].SubClans[j].SubClanName
                                    @Html.HiddenFor(m => m[i].UserId)
                                    @*                                    <div id="rateYo" class="rateYoFor_@i@j"></div>*@
                                    @*                                    @Html.TextBoxFor(m => m[i].SubClans[j].SubClanPriority, new { @class = "form-control small_textbox", Value = " " })*@

                                    @*                                    @Html.Partial("_StarRating", Model[i].SubClans[j]);*@

                                    <div class="subClanPriorityContent">
                                        <label>
                                            <div class="priority-box">
                                                @Html.RadioButtonFor(m => m[i].SubClans[j].SubClanPriority, "1")
                                                <span class="radioButtonText">1</span>
                                            </div>
                                        </label>
                                        <label>
                                            <div class="priority-box">
                                                @Html.RadioButtonFor(m => m[i].SubClans[j].SubClanPriority, "2")
                                                <span class="radioButtonText">2</span>
                                            </div>
                                        </label>

                                        <label>
                                            <div class="priority-box">
                                                @Html.RadioButtonFor(m => m[i].SubClans[j].SubClanPriority, "3")
                                                <span class="radioButtonText">3</span>
                                            </div>
                                        </label>

                                        <label>
                                            <div class="priority-box">
                                                @Html.RadioButtonFor(m => m[i].SubClans[j].SubClanPriority, "4")
                                                <span class="radioButtonText">4</span>
                                            </div>
                                        </label>

                                        <label>
                                            <div class="priority-box">
                                                @Html.RadioButtonFor(m => m[i].SubClans[j].SubClanPriority, "5")
                                                <span class="radioButtonText">5</span>
                                            </div>
                                        </label>
                                    </div>
                                   
                                }
                            </div>

                            @if (i + 1 < Model.Count)
                            {
                            <div class="col-md-5 col-md-push-1">

                                <h3>@Model[i + 1].ClanName</h3>
                                @for (int j = 0; j < Model[i + 1].SubClans.Count; j++)
                                {
                                    @Html.HiddenFor(m => m[i + 1].ClanId)
                                    @Html.HiddenFor(m => m[i + 1].ClanName)
                                    @Html.HiddenFor(m => m[i + 1].SubClans[j].SubClanId)
                                    @Model[i + 1].SubClans[j].SubClanName
                                    @Html.HiddenFor(m => m[i + 1].UserId)
                                    @*                                        <div id="rateYo" class="rateYoFor_@j"></div>*@
                                    @*                                    @Html.TextBoxFor(m => m[i + 1].SubClans[j].SubClanPriority, new { @class = "form-control small_textbox", Value = " " })*@

                                    <div class="subClanPriorityContent">
                                        <label>
                                            <div class="priority-box">
                                                @Html.RadioButtonFor(m => m[i].SubClans[j].SubClanPriority, "1")
                                                <span class="radioButtonText">1</span>
                                            </div>
                                        </label>
                                        <label>
                                            <div class="priority-box">
                                                @Html.RadioButtonFor(m => m[i].SubClans[j].SubClanPriority, "2")
                                                <span class="radioButtonText">2</span>
                                            </div>
                                        </label>

                                        <label>
                                            <div class="priority-box">
                                                @Html.RadioButtonFor(m => m[i].SubClans[j].SubClanPriority, "3")
                                                <span class="radioButtonText">3</span>
                                            </div>
                                        </label>

                                        <label>
                                            <div class="priority-box">
                                                @Html.RadioButtonFor(m => m[i].SubClans[j].SubClanPriority, "4")
                                                <span class="radioButtonText">4</span>
                                            </div>
                                        </label>

                                        <label>
                                            <div class="priority-box">
                                                @Html.RadioButtonFor(m => m[i].SubClans[j].SubClanPriority, "5")
                                                <span class="radioButtonText">5</span>
                                            </div>
                                        </label>
                                    </div>


                                }
                            </div>

                            }
                        </div>
                        i = i + 2;
                    }
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            }
        </div>
    </section>
</div>
